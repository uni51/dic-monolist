<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>素敵なモノと出会う場所<br>人気のアイテムがわかる！</h2>
        <% unless logged_in? %>
          <%= link_to 'モノリスト', signup_path, class: 'btn btn-success btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'items/items', items: @items %>
